<launch>

    <arg name="find_pose" default="true"/>
    <arg name="camera_topics"
         default='[
                    "camera_attached",
                    "camera_top",
                    "camera_front"]' />

    <node
            pkg="object_finder"
            type="hsv_cubes_finder.py"
            name="object_detection"
            output="screen">


        <param name="find_pose" value="$(arg find_pose)"/>
        <param name="camera_topics"
                       value="$(arg camera_topics)"/>

    </node>

</launch>